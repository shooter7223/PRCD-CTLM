<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" styleClass="CTLM" stylesheets="@Theme.css" fx:controller="prcd.ctlm.projet.AddTaskController">
    <Button text="Accueil" onAction="#goHome" />
    <Label styleClass="title" text="Ajouter une tâche" />
    <GridPane GridPane.rowIndex="1">
        <Label text="Nom" />
        <TextArea fx:id="titreBox" GridPane.columnIndex="1" />
        <Label text="Description" GridPane.rowIndex="1" />
        <TextArea fx:id="descriptionBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Priorité" GridPane.rowIndex="2" />
        <GridPane GridPane.rowIndex="2" GridPane.columnIndex="1">
            <RadioButton mnemonicParsing="false" text="Faible" GridPane.columnIndex="0"/>
            <RadioButton mnemonicParsing="false" text="Moyenne" GridPane.columnIndex="1"/>
            <RadioButton mnemonicParsing="false" text="Élevée" GridPane.columnIndex="2"/>
        </GridPane>
        <Label text="État" GridPane.rowIndex="3" />
        <HBox GridPane.rowIndex="3" GridPane.columnIndex="1">
            <RadioButton mnemonicParsing="false" text="À créer" />
            <RadioButton mnemonicParsing="false" text="À reprendre" />
        </HBox>
        <Label text="Fin" GridPane.rowIndex="4" />
        <TextArea GridPane.columnIndex="1" GridPane.rowIndex="4" />
    </GridPane>
    <HBox>
        <Button text="Annuler" onAction="#goHome" />
        <Button text="Valider" onAction="#create" />
    </HBox>
</VBox>
