<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="CTLM" stylesheets="@Theme.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="prcd.ctlm.controller.ViewTasksController">
    <GridPane>
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" />
        </columnConstraints>
        <Button onAction="#goHome" text="Accueil" GridPane.columnIndex="0">
            <graphic><ImageView fitHeight="20" fitWidth="22"><Image url="@HomeIcon.png" /></ImageView></graphic>
        </Button>
        <Button onAction="#logOut" text="Déconnexion" GridPane.columnIndex="1">
            <graphic><ImageView fitHeight="20" fitWidth="20"><Image url="@UserIcon.png" /></ImageView></graphic>
        </Button>
    </GridPane>
    <Label styleClass="title" text="Mes tâches à faire" />
    <ListView fx:id="listTask" />
</VBox>
